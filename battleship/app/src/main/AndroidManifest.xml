<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colbyholmstead.dev.battleship">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".LoseActivity"></activity>
        <activity android:name=".WinnerActivity" />
        <activity android:name=".DefendActivity" />
        <activity android:name=".BattleActivity" />
        <activity android:name=".GridActivity" />
        <activity android:name=".SetupActivity" />
        <activity android:name=".DragandDropActivity" />
        <activity android:name=".DirectionsActivity" />
        <activity android:name=".Ships" />
        <activity android:name=".AllPlayers" />
        <activity android:name=".Lobby" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>